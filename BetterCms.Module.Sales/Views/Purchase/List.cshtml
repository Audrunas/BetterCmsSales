            {
                new EditableGridColumn(SalesGlobalization.SiteSettings_Purchases_CreatedOn_Title, "CreatedOn", "createdOn"),
                new EditableGridColumn(SalesGlobalization.SiteSettings_Purchases_Supplier_Title, "SupplierName", "supplierName"),
                new EditableGridColumn(SalesGlobalization.SiteSettings_Purchases_Status_Title, "Status", "status"),
            }
    };
}

@Html.Partial(RootModuleConstants.EditableGridTemplate, gridViewModel)